<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="com.mycompany.myapp.domain.User" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Authority" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.GroupAccount" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Media" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Media.mailboxCalendars" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Calendar" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Calendar.calendarEvents" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.MediaFeature" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Event" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Message" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Mailbox" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Mailbox.mailboxCalendars" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.File" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
